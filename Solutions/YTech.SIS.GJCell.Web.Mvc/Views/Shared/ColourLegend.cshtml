            <td><img src='@(Url.Content("~/Content/img/error3.gif"))' /></td>
            <td>Prioritas Urgent</td>
        </tr>
    </table>
</text>)
    .Draggable()
    .Resizable()
    .Width(300)
    .Height(230)
    .Modal(true)
    .Visible(false)
    .Events(ev => ev.Close("onClose"))
)

<script type="text/javascript">
    function onClose() {
        $("#showLegend").show();
    }

    $(document).ready(function () {
        $("#showLegend").bind("click", function () {
            $("#legend").data("kendoWindow").center();
            $("#legend").data("kendoWindow").open();
            $("#showLegend").hide();
        });
    });
</script>
